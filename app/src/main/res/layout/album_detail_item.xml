<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>

        <variable
            name="albumDetail"
            type="com.miso.vinilos.models.Album" />
    </data>

    <LinearLayout
        android:id="@+id/albumsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <RelativeLayout
            android:id="@+id/topContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:contentDescription="Test"
                android:maxWidth="125dp"
                android:maxHeight="125dp"
                android:minWidth="125dp"
                android:minHeight="125dp"
                android:src="@drawable/ic_albums" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/image"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/names"
                    style="@style/Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@{albumDetail.name}" />

                <TextView
                    android:id="@+id/releaseDate"
                    style="@style/Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@{albumDetail.releaseDate}" />

                <TextView
                    android:id="@+id/recordLabel"
                    style="@style/Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@{albumDetail.recordLabel}" />

                <TextView
                    android:id="@+id/textView10"
                    style="@style/Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@{albumDetail.description}" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</layout>